generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Use a direct connection for Prisma Client to avoid pgBouncer/transaction pooler issues.
  // Keep env vars in .env.local as requested.
  url      = env("DIRECT_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  CLIENT
}

model User {
  id        String   @id @default(uuid())
  auth0Sub  String   @unique
  email     String   @unique
  fullName  String?
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  entities Entity[]
}

model Entity {
  id        String   @id @default(uuid())
  entity    String
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ownerId   String?
  owner     User?    @relation(fields: [ownerId], references: [id], onDelete: SetNull)

  @@index([entity])
  @@index([ownerId])
}
